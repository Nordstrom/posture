{
  "name": "posture",
  "version": "0.1.0",
  "description": "an opinionated linter for swagger",
  "main": "lint.js",
  "author": "Patrick Dent",
  "license": "APACHE",
  "scripts": {
    "build": "standard --fix && babel -d ./lib ./src -s && babel index.js -o lint.js",
    "build-nolint": "babel -d ./lib ./src -s && babel index.js -o lint.js",
    "test": "standard --fix && jest --watch",
    "test-nolint": "jest --watch"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-babili": "^0.1.4",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "babili": "^0.1.4",
    "jest": "^20.0.4",
    "standard": "^10.0.2"
  },
  "dependencies": {
    "chalk": "^2.0.1",
    "commander": "^2.11.0",
    "jju": "^1.3.0",
    "lodash": "^4.17.4"
  },
  "standard": {
    "globals": [
      "describe",
      "it",
      "expect"
    ]
  },
  "bin": {
    "posture": "./lint.js"
  }
}
